@model Mango.Web.Models.ProductDto


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Update Product</h2>
                </div>
                <div class="card-body">
                    <form asp-action="ProductEdit" method="post" class="needs-validation" novalidate>
                        <input asp-for="ProductId" hidden/>
                        <div class="form-group">
                            <label asp-for="Name">Product Name</label>
                            <input asp-for="Name" class="form-control" required />
                            <div class="invalid-feedback">
                                Please provide a product name.
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Price">Price</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input asp-for="Price" class="form-control" required />
                                <div class="invalid-feedback">
                                    Please provide a valid price.
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                            <label asp-for="CategoryName">Category</label>
                            <input asp-for="CategoryName" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="ImageUrl">Image URL</label>
                            <input asp-for="ImageUrl" class="form-control" />
                        </div>

                        <div class="form-group d-flex justify-content-between">
                            <a asp-action="ProductIndex" class="btn btn-outline-secondary">Back to List</a>
                            <button type="submit" class="btn btn-primary">Update Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Enable Bootstrap validation on the form
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}